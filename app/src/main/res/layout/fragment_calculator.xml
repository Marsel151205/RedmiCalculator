<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".CalculatorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/observer_result"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:maxEms="5"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="42sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30dp"
        android:background="#39FFFFFF" />

    <LinearLayout
        android:id="@+id/firs_line_of_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_c"
            style="@style/Orange.Button"
            android:text="C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            style="@style/Orange.Button"
            android:paddingTop="12dp"
            android:text="Delete"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_procent"
            style="@style/Orange.Button"
            android:text="%" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_division"
            style="@style/Orange.Button"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_line_of_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_seven"
            style="@style/White.Button"
            android:text="7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_eight"
            style="@style/White.Button"
            android:text="8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_nine"
            style="@style/White.Button"
            android:text="9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_multiplication"
            style="@style/Orange.Button"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_line_of_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_four"
            style="@style/White.Button"
            android:text="4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_five"
            style="@style/White.Button"
            android:text="5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_six"
            style="@style/White.Button"
            android:text="6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_minus"
            style="@style/Orange.Button"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_line_of_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_one"
            style="@style/White.Button"
            android:text="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_two"
            style="@style/White.Button"
            android:text="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_three"
            style="@style/White.Button"
            android:text="3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_plus"
            style="@style/Orange.Button"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth_line_of_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_extension"
            style="@style/Orange.Button"
            android:backgroundTint="@color/black"
            app:icon="@drawable/ic_extension"
            app:iconGravity="textEnd"
            app:iconSize="24sp"
            app:iconTint="@color/orange" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_zero"
            style="@style/White.Button"
            android:text="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dot"
            style="@style/White.Button"
            android:text="." />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:src="@drawable/ic_equals" />
    </LinearLayout>
</LinearLayout>